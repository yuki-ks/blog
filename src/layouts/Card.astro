---
import AppShell from "./AppShell.astro";
const { theme } = Astro.props; 
---

<style>
  .card {
    padding: 16px 32px;

    width: 50%;
    height: 80%;

    position: absolute;

    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    margin: auto;

    background: rgba(0, 0, 0, 0.3);
    border-radius: 32px;

    overflow: hidden;
  }

  .card.light {
    background: rgba(255, 255, 255, 0.8)
  }

  .inner-card {
    padding: 0 32px;

    height: 100%;

    overflow-y: scroll;
  }

  .inner-card::-webkit-scrollbar{
    width: 6px;
  }

  .inner-card::-webkit-scrollbar-track{
    background-color: rgba(0, 0, 0, 0.5);

    border-radius: 16px;
  }

  .card.light > .inner-card::-webkit-scrollbar-track{
    background-color: rgba(0, 0, 0, .2);
  }

  .inner-card::-webkit-scrollbar-thumb{
    background-color: rgba(255, 255, 255, .7);

    border-radius: 16px;
  }

  .card.light > .inner-card::-webkit-scrollbar-thumb{
    background-color: rgba(0, 0, 0, 0.5);
  }
</style>

<AppShell>
  <div class:list={["card", theme]}>
    <div class="inner-card">
      <slot />
    </div>
  </div>
</AppShell>